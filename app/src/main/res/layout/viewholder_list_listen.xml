<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

    <FrameLayout
        android:id="@+id/layoutLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_bd_grey_8"
        android:padding="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgLogoSong"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Corner8dp" />

        <ProgressBar
            android:id="@+id/progressLogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:indeterminateTint="@color/blue"
            android:padding="16dp"
            android:visibility="visible" />

    </FrameLayout>

    <TextView
        android:id="@+id/txtNameSong"
        style="@style/txt14BlackBold"
        android:layout_width="0dp"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toStartOf="@+id/imgButtonMenu"
        app:layout_constraintStart_toEndOf="@+id/layoutLogo"
        app:layout_constraintTop_toTopOf="@+id/layoutLogo" />

    <TextView
        android:id="@+id/txtSingerTimeSong"
        style="@style/txt14Black"
        android:layout_width="0dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/layoutLogo"
        app:layout_constraintEnd_toStartOf="@+id/imgButtonMenu"
        app:layout_constraintStart_toEndOf="@+id/layoutLogo" />

    <ImageView
        android:id="@+id/imgButtonMenu"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:contentDescription="@string/button_menu"
        android:src="@mipmap/ic_dots_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>